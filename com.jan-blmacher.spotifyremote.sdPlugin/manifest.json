			"PropertyInspectorPath": "ui/play-playlist.html",
			"Controllers": [
				"Keypad"
			],
			"States": [
				{
					"Image": "imgs/actions/play-playlist/key",
					"TitleAlignment": "middle"
				}
			]
		},
		{
			"Name": "Toggle Shuffle",
			"UUID": "com.jan-blmacher.spotifyremote.toggle-shuffle",
			"Icon": "imgs/actions/toggle-shuffle/icon",
			"Tooltip": "Toggle shuffle mode",
			"PropertyInspectorPath": "ui/authentication.html",
			"Controllers": [
				"Keypad"
			],
			"States": [
				{
					"Image": "imgs/actions/toggle-shuffle/key",
					"TitleAlignment": "middle"
				}
			]
		},
		{
			"Name": "Repeat Mode",
			"UUID": "com.jan-blmacher.spotifyremote.repeat-mode",
			"Icon": "imgs/actions/repeat-mode/icon",
			"Tooltip": "Set repeat mode (off, track, context)",
			"PropertyInspectorPath": "ui/repeat-mode.html",
			"Controllers": [
				"Keypad"
			],
			"States": [
				{
					"Image": "imgs/actions/repeat-mode/key",
					"TitleAlignment": "middle"
				}
			]
		},
		{
			"Name": "Like Song",
			"UUID": "com.jan-blmacher.spotifyremote.like-song",
