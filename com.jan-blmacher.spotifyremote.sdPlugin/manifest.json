{
	"Name": "SpotifyRemote",
	"Version": "0.1.0.0",
	"Author": "Jan Bl√∂macher",
	"Actions": [
		{
			"Name": "Now Playing",
			"UUID": "com.jan-blmacher.spotifyremote.now-playing",
			"Icon": "imgs/actions/now-playing/icon",
			"Tooltip": "Displays the currently playing track on Spotify with marquee scrolling",
			"PropertyInspectorPath": "ui/authentication.html",
			"Controllers": [
				"Keypad"
			],
			"States": [
				{
					"Image": "imgs/actions/now-playing/key",
					"TitleAlignment": "bottom",
					"FontSize": 10,
					"FontStyle": "Bold",
					"FontUnderline": false,
					"ShowTitle": true,
					"TitleColor": "#FFFFFF"
				}
			]
		},
		{
			"Name": "Next",
			"UUID": "com.jan-blmacher.spotifyremote.next",
			"Icon": "imgs/actions/next/icon",
			"Tooltip": "Skip to the next track",
			"PropertyInspectorPath": "ui/authentication.html",
			"Controllers": [
				"Keypad"
			],
			"States": [
				{
					"Image": "imgs/actions/next/key",
					"TitleAlignment": "middle"
				}
			]
		},
		{
			"Name": "Previous",
			"UUID": "com.jan-blmacher.spotifyremote.previous",
			"Icon": "imgs/actions/previous/icon",
			"Tooltip": "Go to the previous track",
			"PropertyInspectorPath": "ui/authentication.html",
			"Controllers": [
				"Keypad"
			],
			"States": [
				{
					"Image": "imgs/actions/previous/key",
					"TitleAlignment": "middle"
				}
			]
		},
		{
			"Name": "Play/Pause",
			"UUID": "com.jan-blmacher.spotifyremote.play-pause",
			"Icon": "imgs/actions/play-pause/icon",
			"Tooltip": "Toggle play/pause",
			"PropertyInspectorPath": "ui/authentication.html",
			"Controllers": [
				"Keypad"
			],
			"States": [
				{
					"Image": "imgs/actions/play-pause/key-play",
					"Name": "Paused (Show Play)",
					"TitleAlignment": "middle"
				},
				{
					"Image": "imgs/actions/play-pause/key-pause",
					"Name": "Playing (Show Pause)",
					"TitleAlignment": "middle"
				}
			]
		},
		{
			"Name": "Play Playlist",
			"UUID": "com.jan-blmacher.spotifyremote.play-playlist",
