			],
			"States": [
				{
					"Image": "imgs/actions/volume-down/key",
					"TitleAlignment": "middle"
				}
			]
		}
	],
	"Category": "SpotifyRemote",
	"CategoryIcon": "imgs/plugin/category-icon",
	"CodePath": "bin/plugin.js",
	"Description": "Remote control Spotify from the Stream Deck",
	"Icon": "imgs/plugin/marketplace",
	"SDKVersion": 2,
	"Software": {
		"MinimumVersion": "6.5"
	},
	"OS": [
		{
			"Platform": "mac",
			"MinimumVersion": "12"
		},
		{
			"Platform": "windows",
			"MinimumVersion": "10"
		}
	],
	"Nodejs": {
		"Version": "20",
		"Debug": "enabled"
	},
	"UUID": "com.jan-blmacher.spotifyremote"
}