			"PropertyInspectorPath": "ui/authentication.html",
			"Controllers": [
				"Keypad"
			],
			"States": [
				{
					"Image": "imgs/actions/like-song/key",
					"TitleAlignment": "middle"
				}
			]
		},
		{
			"Name": "Volume Up",
			"UUID": "com.jan-blmacher.spotifyremote.volume-up",
			"Icon": "imgs/actions/volume-up/icon",
			"Tooltip": "Increase volume by a configurable percentage",
			"PropertyInspectorPath": "ui/volume-control.html",
			"Controllers": [
				"Keypad"
			],
			"States": [
				{
					"Image": "imgs/actions/volume-up/key",
					"TitleAlignment": "middle"
				}
			]
